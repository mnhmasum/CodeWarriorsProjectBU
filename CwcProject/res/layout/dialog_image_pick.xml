<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popupstyle"
    android:orientation="vertical"
    tools:context=".GalleryActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/bg_light_blue"
        android:padding="@dimen/activity_around_padding"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_post_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/post_cam_btn" />

        <Button
            android:id="@+id/btn_post_gallary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/btn_post_cam"
            android:background="@drawable/post_image_btn" />
    </RelativeLayout>

</RelativeLayout>