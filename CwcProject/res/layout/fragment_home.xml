<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/app_logo"
        android:text="@string/button_text_location" />

    <Button
        android:id="@+id/btn_create_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_location"
        android:drawableRight="@drawable/app_logo"
        android:text="@string/button_text_post_new" />

    <TextView
        android:id="@+id/txt_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_create_ad"
        android:text="Latest in computer" />

    <ListView
        android:id="@+id/list_view_latest_product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_view_title" >
    </ListView>

</RelativeLayout>