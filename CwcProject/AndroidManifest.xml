<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mybdshop.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.mybdshop.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mybdshop.app.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.mybdshop.app.RegistrationActivity"
            android:label="@string/registration_title_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.mybdshop.app.CreateAdActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity android:name="com.mybdshop.app.CustomGalleryActivity" >
            <intent-filter>
                <action android:name="luminous.ACTION_PICK" />
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mybdshop.app.GalleryActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
        <activity
            android:name="com.mybdshop.app.FilterActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
        </activity>
    </application>

</manifest>